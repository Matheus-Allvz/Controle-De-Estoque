<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controler.TelaPrincipalController">
    <children>
        <Label text="Inventário de Produtos">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
        <HBox style="-fx-border-color: #4d4d4d; -fx-border-width: 1;">
            <children>
                <TableView fx:id="tableViewProdutos" prefHeight="278.0" prefWidth="549.0">
                    <columns>
                        <TableColumn fx:id="tableColumnNome" prefWidth="298.0" text="Nome do Produto" />
                        <TableColumn fx:id="tableColumnPreco" prefWidth="138.0" text="Preço (R$)" />
                        <TableColumn fx:id="tableColumnQuantidade" prefWidth="112.0" text="Quantidade" />
                    </columns>
                </TableView>
                <VBox alignment="TOP_CENTER" prefHeight="278.0" prefWidth="255.0" style="-fx-border-color: #4d4d4d; -fx-border-width: 0 0 0 1px;">
                    <children>
                        <Label fx:id="labelModo" text="Adicionar Produto">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <VBox prefHeight="250.0" prefWidth="100.0" style="-fx-padding: 12px 8px;">
                            <children>
                                <Label text="Nome do Produto:">
                                    <VBox.margin>
                                        <Insets bottom="2.0" />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="textFieldNome" />
                                <Label text="Preço (R$):">
                                    <VBox.margin>
                                        <Insets bottom="2.0" top="4.0" />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="textFieldPreco" />
                                <Label text="Quantidade">
                                    <VBox.margin>
                                        <Insets bottom="2.0" top="4.0" />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="textFieldQuantidade" />
                                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-padding: 8;">
                                    <children>
                                        <Button fx:id="buttonPrincipal" mnemonicParsing="false" onAction="#handleButtonPrincipalAction" text="Adicionar">
                                            <HBox.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" />
                                            </HBox.margin>
                                        </Button>
                                        <Button fx:id="buttonSecundario" mnemonicParsing="false" onAction="#handleButtonSecundarioAction" text="Cancelar">
                                            <HBox.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" />
                                            </HBox.margin>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </HBox>
        <Label fx:id="labelValorTotal" text="Valor Total do Estoque: R$ 0,00">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
